  <title>TechMaster Perfil de usuario</title>
</head>

<body class="body-profile" id="profile-page">

  <%- include('../partials/header') %>


    <main class="main-profile">

      <a class="main__p-regresar" href="/"><i class="fa-solid fa-arrow-left"></i> Regresar</a>

      
      <div class="profile_boxRow">
        <div style="display: flex; flex-direction: column; align-items: center">
          <span class="profile_titulo">Tu perfil</span>
        <img class="profile_picture"
          src="<%= /http/.test(user.avatar) ? user.avatar : ` /Images/users/${user.avatar || 'default-user.png'}` %>"
          alt="">
        </div>
      <div>
        <h1 class="profile_greatings">Hola <%= user.name %>
            <%=user.surname %>
        </h1>
        <span class="profile_titulo">
          <%=user.email%>
        </span>
      </div>
      </div>
      <form class="profile_form" action="/users/profile?_method=PUT&removeImageBefore=1" method="POST"
        enctype="multipart/form-data">
        <div class="profile_box">

          <span class="profile_titulo">Tus datos personales</span>

          <p>Nombre:   <input name="name" type="text" value="<%=user.name%>"></p>
          <p>Apellido:   <input name="surname" type="text" value="<%=user.surname%>"></p>
          <p>Email:   <input name="email" type="text" value="<%=user.email%>"></p>
          <!-- <small class="profile_subtitulo">Ubicacion</small> -->
          <p>Direccion:   <input name="address" type="text" value="<%=user.location.address%>"></p>
          <p>Ciudad:   <input name="city" type="text" value="<%=user.location.city%>"></p>
          <p>Provincia:   <input name="province" type="text" value="<%=user.location.province%>"></p>
          <p>Codigo Postal:   <input name="zipCode" type="text" value="<%=user.location.zipCode%>"></p>
          <!-- <small class="profile_subtitulo">Avatar</small> -->
          <p><label for="avata">Avatar:   </label><input name="avatar" type="file"></p>
          
          
          <div class="profile_buttonBox">
            <button class="profile_button" type="reset"> Resetear </button>
            <button class="profile_button" type="submit"> Guardar </button>
          </div>
        </div>
      </form>


