<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include('../partials/head',{title : 'Creacion de productos'}) %>


<body class="boby__view__creacion">


  <%- include('../partials/header') %>

    <main class="estaCreacion">
     
      <form method="POST" enctype="multipart/form-data">
        
          <h1 class="esteTitulo">Crear Producto</h1>
        <div>
          <input  class="inputNombre" type="form_text" class="texto" name="name" placeholder="Nombre">
        </div>

        <div>
          <select class="inputCategoria" class="selector" name="category" id="">
            <option class="estaOpcion" >Categoria</option>
            <option class="estaOpcion" value="Monitor">Monitor </option>
            <option class="estaOpcion" value="Teclado">Teclado </option>
            <option class="estaOpcion" value="Mouse">Mouse </option>
            <option class="estaOpcion" value="Auriculares">Auriculares</option>
          </select>
          <select class="inputColor" class="selector" name="category" id="">
            <option class="estaOpcion" >Color </option>
            <option class="estaOpcion" value="Blanco">Blanco</option>
            <option class="estaOpcion" value="Negro">Negro</option>
            <option class="estaOpcion" value="Rojo">Rojo</option>
            <option class="estaOpcion" value="Amarillo">Amarillo </option>
            <option class="estaOpcion" value="Azul">Azul </option>
            <option class="estaOpcion" value="Vioeleta">Vioeleta</option>
            <option class="estaOpcion" value="Naranja">Naranja</option>
            <option class="estaOpcion" value="Violeta">Violeta</option>
          </select>
      </div>

<!--         <p class="esteStock">Indique el stock disponible:</p>
        <div class="inputStock" ><input type=" number" class="numero" >Unidades</div> -->
      <div>
        <input type="number" class="inputPrecio" name="price" >
        <input type="number" class="inputDescuento" name="discount" >
      </div>

      <div>
        <textarea class="inputDescripcion" name="description"></textarea>
      </div>
      <div>
        <input type="file" name="images" multiple>
      </div>
      <div>
          <button class="esteBoton" type="reset">Cancelar proceso</button>
          <button class="esteBoton" type="submit">Crear Producto</button>
      </div>    
      </form>
    </main>

    <%- include('../partials/footer') %>

    <%- include('../partials/scripts')  %>
</body>

</html>